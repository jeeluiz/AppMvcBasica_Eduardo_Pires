@model IEnumerable<AppMvcBasica.Models.Produto>

@{
    ViewData["Title"] = "Lista De Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn " style="background-color:orange;" asp-action="Create">Novo Produto</a>
</p>
<table class="table table-hover">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Name)
                </td>
                <td>
                    <a class="btn " style="background-color:orange;" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a class="btn " style="background-color:orange;" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a class="btn " style="background-color:orange;" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
